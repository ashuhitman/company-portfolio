---
import Image from 'astro/components/Image.astro';
import { getCollection } from 'astro:content';

const profiles = await getCollection('about');

---

<section id="about">
    <h2>Our Team</h2>
    <div class="content">
        {profiles.map(profile => (<div class="profile">
            <figure><Image src={profile.data.image} alt="name" format='avif'/></figure>
            <h2>{profile.data.name}</h2>
            <ul class="role">
                {profile.data.role.map((role: string) => <li>{role}</li>)}
            </ul>
            <p>{profile.data.description}</p>
        </div>))}
    </div>
</section>

<style>
    #about {
        gap: 4rem;
    
    }
    #about > h2 {
        margin: 2rem;
    }
    .content {
        display: flex;
       gap: 2rem;
        justify-content: space-evenly;
        
    }
    .profile {
        /* width: 33%; */
        background-color: var( --card-color);
        padding: 2.5rem 1rem;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
        gap: 1rem;
        border-radius: 1rem;
        box-shadow: rgba(0, 0, 0, 0.1) 0px 1px 3px 0px, rgba(0, 0, 0, 0.06) 0px 1px 2px 0px;
    }
    figure {
        margin-bottom: 1rem;
        height: 150px;
        width: 150px;
        background-color: green;
        border-radius: 50%;
        overflow: hidden;
    }
    figure > * {
        width: 100%;
        height: 100%;
    }
    .role {
        list-style-type: square;
        text-align: start;
    }

    @media only screen and (max-width: 600px) {
  .content {
    flex-direction: column;
  }
  .profile {
    width: 100%;
  }
}

</style>